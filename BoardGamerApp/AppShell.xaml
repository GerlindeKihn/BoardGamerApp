<?xml version="1.0" encoding="UTF-8" ?>
<Shell TabBarBackgroundColor="LightGray"
    x:Class="BoardGamerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:BoardGamerApp.Views"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Icon="home.png" Title="Home">
            <ShellContent ContentTemplate="{DataTemplate view:Home}" />
        </Tab>
        <Tab Icon="dice.png" Title="Spiele">
            <ShellContent ContentTemplate ="{DataTemplate view:BoardGames}" />
        </Tab>
        <Tab Icon="chat.png" Title="Chat">
            <ShellContent ContentTemplate ="{DataTemplate view:Messages}" />
        </Tab>
        <Tab Icon="calendar.png" Title="Termine">
            <ShellContent ContentTemplate ="{DataTemplate view:GameAppointments}" />
        </Tab>
        <Tab Icon="star.png" Title="Bewertung">
            <ShellContent ContentTemplate ="{DataTemplate view:RateEvent}" />
        </Tab>
    </TabBar>
    
</Shell>

<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BoardGamerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BoardGamerApp"
    xmlns:view="clr-namespace:BoardGamerApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Icon="dice.png">
            <ShellContent ContentTemplate ="{DataTemplate view:BoardGames}" />
        </Tab>
        <Tab Icon="chat.png">
            <ShellContent ContentTemplate ="{DataTemplate view:Messages}" />
        </Tab>
        <Tab Icon="calendar.png">
            <ShellContent ContentTemplate ="{DataTemplate view:GameAppointments}" />
        </Tab>
        <Tab Icon="star.png">
            <ShellContent ContentTemplate ="{DataTemplate view:RateEvent}" />
        </Tab>
    </TabBar>
    
</Shell>
